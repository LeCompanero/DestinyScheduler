<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#0277bd</item>
        <item name="colorPrimaryDark">#0277bd</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">#0277bd</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="HomeCards" parent="CardView">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardBackgroundColor">@color/background_floating_material_light</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="RaidCards" parent="CardView">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardBackgroundColor">@color/background_floating_material_light</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>